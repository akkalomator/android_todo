<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CheckboxTaskCheck" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>

    <style name="TodoItemStyle">
        <item name="android:background">@drawable/bordered_view</item>
    </style>

    <style name="TodoContentStyle" parent="Widget.AppCompat.ListView" >
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TodoDateStyle" parent="Widget.AppCompat.ListView" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="MainActivityStyle">
        <item name="android:background">@color/primaryBackground</item>
    </style>

</resources>
